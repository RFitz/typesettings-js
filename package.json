{
  "name": "typesettings-js",
  "version": "0.0.8",
  "description": "A quest for consistency",
  "main": "dist/typesettings-js.cjs.js",
  "module": "dist/typesettings-js.esm.js",
  "browser": "dist/typesettings-js.umd.js",
  "types": "dist/types/index.d.ts",
  "files": [
    "dist"
  ],
  "engines": {
    "node": ">= 8.10.0"
  },
  "scripts": {
    "prebuild": "rm -rf dist",
    "postbuild": "yarn dts-bundle-generator -o ./dist/index.d.ts ./dist/types/index.d.ts",
    "build": "rollup -c",
    "dev": "rollup -c -w",
    "test": "yarn build && yarn lint && yarn size",
    "lint": "tslint src/**/*.ts --project tsconfig.json",
    "size": "bundlesize",
    "prepare": "yarn run -s build"
  },
  "dependencies": {
    "deepmerge": "^3.1.0"
  },
  "devDependencies": {
    "bundlesize": "^0.17.1",
    "dts-bundle-generator": "^2.0.0",
    "husky": "^1.3.1",
    "lint-staged": "^8.1.3",
    "rollup": "^1.1.2",
    "rollup-plugin-commonjs": "^9.2.0",
    "rollup-plugin-node-resolve": "^4.0.0",
    "rollup-plugin-terser": "^4.0.4",
    "rollup-plugin-typescript2": "^0.19.2",
    "tslint": "^5.12.1",
    "tslint-config-airbnb": "^5.11.1",
    "typescript": "^3.3.3"
  },
  "lint-staged": {
    "*.{js,jsx}": [
      "tslint --fix",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "post-commit": "git update-index --again",
      "pre-commit": "lint-staged"
    }
  },
  "bundlesize": [
    {
      "path": "dist/typesettings-js.umd.js",
      "maxSize": "1.5 kb"
    },
    {
      "path": "dist/typesettings-js.cjs.js",
      "maxSize": "1.5 kb"
    },
    {
      "path": "dist/typesettings-js.esm.js",
      "maxSize": "1.5 kb"
    }
  ],
  "homepage": "https://github.com/buames/typesettings-js#readme",
  "repository": "https://github.com/buames/typesettings-js",
  "author": "buames",
  "publishConfig": {
    "access": "public"
  },
  "license": "MIT"
}

{
  "name": "typesettings-js",
  "version": "0.0.1",
  "description": "A quest for consistency",
  "main": "dist/typesettings-js.cjs.js",
  "module": "dist/typesettings-js.esm.js",
  "files": [
    "dist"
  ],
  "engines": {
    "node": ">= 10.9.0"
  },
  "scripts": {
    "clean": "rm -rf dist",
    "test": "npm-run-all lint:check test:size",
    "build": "npm-run-all clean rollup rollup:umd",
    "watch": "rollup -c rollup.config.js --watch",
    "rollup": "rollup -c rollup.config.js",
    "rollup:umd": "UMD=true rollup -c rollup.config.js",
    "lint:check": "eslint --ext .js src",
    "test:size": "npm-run-all build size",
    "size": "bundlesize",
    "precommit": "lint-staged",
    "prepare": "yarn run -s build"
  },
  "dependencies": {
    "deepmerge": "^2.1.1"
  },
  "devDependencies": {
    "@babel/cli": "^7.0.0",
    "@babel/core": "^7.0.0",
    "@babel/plugin-proposal-object-rest-spread": "^7.0.0",
    "@babel/preset-env": "^7.0.0",
    "babel-eslint": "8",
    "bundlesize": "^0.17.0",
    "eslint": "^5.5.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-plugin-import": "^2.14.0",
    "husky": "^0.14.3",
    "lint-staged": "^7.2.2",
    "npm-run-all": "^4.1.3",
    "rollup": "^0.65.0",
    "rollup-plugin-babel": "^4.0.2",
    "rollup-plugin-node-resolve": "^3.3.0",
    "rollup-plugin-uglify": "^5.0.2",
    "rollup-watch": "^4.3.1"
  },
  "lint-staged": {
    "*.{js,jsx}": [
      "eslint --fix",
      "git add"
    ]
  },
  "bundlesize": [
    {
      "path": "dist/index.umd.min.js",
      "maxSize": "1.5 kb"
    },
    {
      "path": "dist/typesettings-js.cjs.js",
      "maxSize": "2.5 kb"
    },
    {
      "path": "dist/typesettings-js.esm.js",
      "maxSize": "2.5 kb"
    }
  ],
  "homepage": "https://github.com/buames/typesettings-js#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/buames/typesettings-js.git"
  },
  "author": "buames",
  "publishConfig": {
    "access": "public"
  },
  "license": "MIT"
}
